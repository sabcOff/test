<?xml version='1.0' encoding='utf-8'?>
<widget id="com.sabco.offiboard" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Offiboard</name>
    <description>
        Offiboard
    </description>
    <author email="toum@toum.be" href="http://www.toum.be">
        Thoumsin Fabien
    </author>
    <content src="index.html" />
    <access origin="*" />
    <access origin="https://ssl11.ovh.net" />
    <preference name="fullscreen" value="false" />
    <preference name="webviewbounce" value="true" />
    <!--
    		ICON SETTINGS
    -->
    <icon src="icon.png" />
    <icon src="icon.png"   gap:platform="android"    gap:density="ldpi" />
    <icon src="icon.png"   gap:platform="android"    gap:density="mdpi" />
    <icon src="icon.png"   gap:platform="android"    gap:density="hdpi" />
    <icon src="icon.png"   gap:platform="android"    gap:density="xhdpi" />
    
    <!--
    		SPLASH SCREEN SETTINGS
    -->
    <gap:splash src="screen.png" gap:platform="android" gap:density="ldpi" />
	<gap:splash src="screen.png" gap:platform="android" gap:density="mdpi" />
	<gap:splash src="screen.png" gap:platform="android" gap:density="hdpi" />
	<gap:splash src="screen.png" gap:platform="android" gap:density="xhdpi" />
	<gap:splash src="screen.png" gap:platform="android" gap:density="xxhdpi" />
	
	<!-- iPhone 5 / iPod Touch (5th Generation) -->
	<gap:splash src="Default-568h@2x.png" gap:platform="ios" width="640" height="1136" />
	<!--
			PLUGINS
	-->
	<gap:plugin name="org.apache.cordova.device" />
	<gap:plugin name="com.phonegap.plugins.pushplugin" version="2.1.1" />
</widget>
